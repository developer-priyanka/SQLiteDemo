<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.assignment.sqlitedemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/textView"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etFname" />

    <EditText
        android:layout_width="219dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etFname"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small.Inverse" />

    <TextView
        android:text="Last Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLname"
        app:layout_constraintTop_toBottomOf="@+id/etFname"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small.Inverse" />

    <Button
        android:text="Add"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/button"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="48dp" />

    <ListView
        android:layout_width="336dp"
        android:layout_height="511dp"
        android:id="@+id/listview"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>
